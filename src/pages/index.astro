---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.svelte';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
import {Code} from 'astro:components';

const schemaCode = `
[SensitiveData(AnonymizationMethod.Hash)]
public string Email {
    get;
    set;
}

var processor = new DataAnonymizer();
var cleanData = processor.Anonymize(rawData);
`;

const description = "Explore the portfolio of Túlio Ribeiro dos Anjos, a Senior Backend Engineer with 12+ years of experience. Discover innovative projects built with .NET, Java, and cloud technologies—crafted for modern enterprises, tech recruiters, and developers alike.";
---
<BaseLayout title="Túlio Ribeiro dos Anjos | Senior Backend Engineer" description={description}>
    <Navbar client:load/>
    <Hero/>

    <main id="main-content" class="w-full max-w-6xl mx-auto px-6 py-16 space-y-20">
        <!-- Skills Section -->
        <section class="space-y-8">
            <h2 class="text-3xl font-mono font-medium text-[var(--color-primary)]">My Toolkit</h2>
            <div class="space-y-8"> {/* Removed grid class - now just space-y-8 for vertical spacing */}
                <!-- Core Stack -->
                <div class="bg-[var(--color-surface)] shadow-md rounded-lg p-4 md:p-6">
                    <h3 class="text-xl font-semibold mb-4">Backend Languages & Frameworks</h3>
                    <ul class="space-y-3 text-[var(--color-text-primary)]">
                        <li>C#/.NET (Framework to .NET 8) - 12+ years</li>
                        <li>Java (Spring Boot) - 3 years, OCP Certified</li>
                    </ul>
                </div>
                <!-- Cloud Infrastructure -->
                <div class="bg-[var(--color-surface)] shadow-md rounded-lg p-6">
                    <h3 class="text-xl font-semibold mb-4">Cloud & DevOps Technologies</h3>
                    <div class="grid grid-cols-2 gap-3"> {/* Keep grid for skills *within* this card if desired */}
                        <span>AWS Lambda</span>
                        <span>Azure DevOps</span>
                        <span>Docker</span>
                        <span>GitLab CI</span>
                    </div>
                </div>
                <!-- Database Systems -->
                <div class="bg-[var(--color-surface)] shadow-md rounded-lg p-6">
                    <h3 class="text-xl font-semibold mb-4">Data Management & Databases</h3>
                    <ul class="space-y-2 text-[var(--color-text-primary)]">
                        <li>SQL Server (T-SQL) - Entity Framework</li>
                        <li>MongoDB - NoSQL Design</li>
                    </ul>
                </div>
            </div>
        </section>

        <!-- Projects Section -->
        <section class="space-y-8">
            <h2 class="text-3xl font-mono font-medium text-[var(--color-primary)]">Selected Projects</h2>
            <div class="grid gap-8 md:grid-cols-2">
                <!-- SchemaShroud Project -->
                <div class="bg-[var(--color-surface)] shadow-md rounded-lg p-6">
                    <h3 class="text-xl font-semibold mb-4">SchemaShroud: .NET Data Anonymization Library for GDPR Compliance</h3>
                    <div class="prose prose-sm max-w-none text-[var(--color-text-primary)] mb-4"> {/* Added prose class and adjusted text color */}
                        <p>
                            Developed SchemaShroud to address the need for GDPR-compliant data anonymization in .NET applications, particularly for non-production environments.  This library uses declarative attributes and reflection-based processing to anonymize sensitive data, offering customizable anonymization strategies.  Key technologies include .NET 8.0 and reflection.
                        </p>
                    </div>
                    <p class="mb-4">
                        <a
                          href="https://github.com/tulior/schema-shroud"
                          class="flex items-center text-[var(--color-primary)] hover:text-[var(--color-secondary)] transition-colors underline font-semibold" {/* Made link text bolder */}
                        >
                            <svg class="w-5 h-5 mr-2 fill-current" viewBox="0 0 24 24" aria-hidden="true" focusable="false"> {/* Added GitHub Icon SVG */}
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
                            </svg>
                            GitHub Repository
                        </a>
                    </p>
                </div>

                <!-- Personal Website Project (Revised Title & Description) -->
                <div class="bg-[var(--color-surface)] shadow-md rounded-lg p-6">
                    <h3 class="text-xl font-semibold mb-4">Personal Portfolio Website (Astro, Tailwind CSS) - Optimized for Performance & SEO</h3>
                    <div class="prose prose-sm max-w-none text-[var(--color-text-primary)] mb-4">
                        <p>
                            Built this portfolio website using Astro and Tailwind CSS to showcase my skills and experience, prioritizing <strong>optimal performance, accessibility, and SEO</strong>.  Leveraging static site generation and modern web technologies, the site achieves <strong>perfect scores (100/100) across all Google Lighthouse metrics</strong>: Performance, Accessibility, Best Practices, and SEO.
                        </p>
                        <p>
                            This demonstrates a commitment to building <strong>high-quality, user-centric web experiences</strong> that are not only fast and efficient but also <strong>discoverable and accessible to all users</strong>. Key technologies include Astro, Tailwind CSS, and JavaScript.
                        </p>
                    </div>
                    <p>
                        <a
                          href="https://github.com/tulior/tulio.org"
                          class="flex items-center text-[var(--color-primary)] hover:text-[var(--color-secondary)] transition-colors underline font-semibold"
                        >
                            <svg class="w-5 h-5 mr-2 fill-current" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
                            </svg>
                            GitHub Repository
                        </a>
                    </p>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section class="space-y-8">
            <h2 class="text-3xl font-mono font-medium text-[var(--color-primary)]">Let's Talk</h2>
            <div class="bg-[var(--color-surface)] shadow-md rounded-lg p-6 text-[var(--color-text-secondary)]">
                <p class="mb-4 text-[var(--color-text-primary)]"> {/* Adjusted text color here as well */}
                    Let's build something great together. Connect with me via email or LinkedIn.
                </p>
                <div class="flex flex-col gap-4">
                    <a href="mailto:mail@tulio.org"
                       class="flex items-center gap-2 text-[var(--color-primary)] hover:underline">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                        mail@tulio.org
                    </a>
                    <a href="https://linkedin.com/in/tulioanjos"
                       class="flex items-center gap-2 text-[var(--color-primary)] hover:underline">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                        </svg>
                        LinkedIn Profile
                    </a>
                </div>
            </div>
        </section>
    </main>
    <Footer/>
</BaseLayout>