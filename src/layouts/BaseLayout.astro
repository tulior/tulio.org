---
// baselayout.astro - Updated for SEO & Remote Focus
import '../styles/global.css';
const { title, description } = Astro.props;
const pageTitle = title || "Túlio Ribeiro dos Anjos | Senior Backend Engineer - High-Performance & Reliable Systems (Remote)"; // More SEO-focused Title
const pageDescription =
  description ||
  "Túlio Ribeiro dos Anjos: Senior Backend Engineer specializing in High-Performance & Reliable Systems. 12+ years .NET, Java, Cloud. Remote work expert. Portfolio & Resume."; // More SEO-focused Description
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary SEO Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <meta name="author" content="Túlio Ribeiro dos Anjos" />
    <link rel="canonical" href="https://tulio.org/" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://tulio.org/" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content="https://tulio.org/img/og-banner.png" />
    <meta property="og:site_name" content="Túlio Ribeiro dos Anjos Portfolio" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://tulio.org/" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content="https://tulio.org/img/og-banner.png" />

    <!-- Structured Data: Person Schema -->
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "Person",
            "name": "Túlio Ribeiro dos Anjos",
            "url": "https://tulio.org/",
            "sameAs": [
                "https://linkedin.com/in/tulioanjos",
                "https://github.com/tulior"
            ],
            "jobTitle": "Senior Backend Engineer specializing in High-Performance & Reliable Systems (Remote)", // More Specific Job Title & Remote
            "worksFor": {
                "@type": "Organization",
                "name": "Independent / Consulting"
            },
            "description": "Senior Backend Engineer specializing in High-Performance & Reliable Systems. 12+ years .NET, Java, Cloud. Remote work expert. Let's build robust and scalable solutions together." // More Specific & Remote Focused Description
        }
    </script>

    <!-- Favicon and Manifest -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

    <!-- Security Header -->
    <meta http-equiv="Content-Security-Policy" content="default-src 'self' https: data: 'unsafe-inline' 'unsafe-eval';" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#1D4ED8" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-LLHRVPNSXT"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-LLHRVPNSXT');
    </script>
</head>
<body class="bg-[var(--color-background)] text-[var(--color-text-primary)] font-sans">
<slot />
</body>
</html>