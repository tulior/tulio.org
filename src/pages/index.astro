---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.svelte';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
import FloatingLinks from '../components/FloatingLinks.tsx';
import {Code} from 'astro:components';

const schemaCode = `
[SensitiveData(AnonymizationMethod.Hash)]
public string Email {
    get;
    set;
}

var processor = new DataAnonymizer();
var cleanData = processor.Anonymize(rawData);
`;
---
<BaseLayout title="Túlio Ribeiro dos Anjos | Senior Backend Engineer">
    <Navbar client:load/>
    <Hero/>

    <!-- Smooth Scroll Script for Hero Arrow -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const scrollArrow = document.getElementById('scroll-arrow');
        const mainContent = document.getElementById('main-content');
        if (scrollArrow && mainContent) {
          scrollArrow.addEventListener('click', () => {
            mainContent.scrollIntoView({behavior: 'smooth'});
          });
        }
      });
    </script>

    <main id="main-content" class="w-full max-w-6xl mx-auto px-6 py-16 space-y-20">
        <!-- Skills Section -->
        <section class="space-y-8">
            <h2 class="text-3xl font-mono font-medium text-[var(--color-primary)]">~/skills</h2>
            <div class="grid gap-8 md:grid-cols-2">
                <!-- Core Stack -->
                <div class="bg-[var(--color-surface)] shadow-md rounded-lg p-4 md:p-6">
                    <div class="flex items-center gap-3 mb-4">
                        <span class="font-mono text-lg text-[var(--color-primary)]">[languages]</span>
                        <h3 class="text-xl font-semibold">Core Stack</h3>
                    </div>
                    <ul class="space-y-3 text-[var(--color-text-primary)]">
                        <li class="flex justify-between items-center">
                            <span>C#/.NET (2.0 → 8)</span>
                            <span class="font-mono text-xs bg-[var(--color-secondary)]/10 px-2 py-1 rounded text-[var(--color-secondary)]">12+yrs</span>
                        </li>
                        <li class="flex justify-between items-center">
              <span>
