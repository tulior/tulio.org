---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.svelte';

const description = "View the professional resume of Túlio Ribeiro dos Anjos, a Senior Backend Engineer with over 12 years of experience modernizing legacy systems, building high-performance APIs, and leading cloud integrations. Explore detailed skills, certifications, and a rich work history.";
---
<BaseLayout title="Túlio Ribeiro dos Anjos | Resume" description={description}>
    <Navbar client:load/>
    <main class="pt-24 max-w-6xl mx-auto px-6 py-16 space-y-20">
        <!-- Header Section -->
        <section class="text-center space-y-4">
            <h1 class="text-5xl font-extrabold text-[var(--color-primary)]">TÚLIO RIBEIRO DOS ANJOS</h1>
            <p class="text-2xl text-[var(--color-secondary)] font-medium">Senior Back-End Developer</p>
            <p class="text-sm text-[var(--color-text-secondary)]">
                Campo Grande, MS, Brazil •
                <a href="mailto:mail@tulio.org" class="hover:underline">mail@tulio.org</a> •
                +55 67 9 9266 0804 •
                <a href="https://tulio.org" class="hover:underline" target="_blank" rel="noopener">tulio.org</a> •
                Open to Remote Work
            </p>
            <a
              href="/resume.pdf"
              download="Tulio_Ribeiro_Resume.pdf"
              class="inline-block bg-[var(--color-primary)] text-[var(--color-surface)] px-8 py-3 rounded-lg hover:bg-[var(--color-primary)]/90 transition-colors font-mono text-sm"
            >
                download_pdf().pdf
            </a>
        </section>

        <hr class="border-[var(--color-text-secondary)]/20" />

        <!-- Two-Column Layout -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Sidebar: Summary, Core Competencies, Certifications -->
            <aside class="md:col-span-1 space-y-8">
                <!-- Summary -->
                <div class="bg-[var(--color-surface)] shadow rounded-lg p-6">
                    <h2 class="text-xl font-bold text-[var(--color-primary)] border-b pb-2 mb-4">Summary</h2>
                    <p class="text-[var(--color-text-secondary)] leading-relaxed">
                        Senior back-end developer with 12+ years of experience upgrading legacy systems, building high‑performance solutions, and leading cloud integrations.
                        Strong background in .NET (Framework to 8), Java 11, AWS, and advanced data handling. Consistently slashes maintenance costs,
                        optimizes databases, and delivers resilient, scalable software for demanding production environments.
                    </p>
                </div>
                <!-- Core Competencies -->
                <div class="bg-[var(--color-surface)] shadow rounded-lg p-6">
                    <h2 class="text-xl font-bold text-[var(--color-primary)] border-b pb-2 mb-4">Core Competencies</h2>
                    <ul class="list-disc list-inside text-[var(--color-text-secondary)] space-y-2">
                        <li><strong>Languages & Frameworks:</strong> C# (.NET 8/Framework), Java 11, Spring Boot, REST APIs</li>
                        <li><strong>Databases:</strong> SQL Server, MongoDB, Entity Framework, JPA, Hibernate</li>
                        <li><strong>Cloud & DevOps:</strong> AWS, Docker, Azure DevOps, GitLab CI</li>
                        <li><strong>System Integration:</strong> ETL pipelines, Secure HTTPS, Webhooks, API design</li>
                    </ul>
                </div>
                <!-- Certifications -->
                <div class="bg-[var(--color-surface)] shadow rounded-lg p-6">
                    <h2 class="text-xl font-bold text-[var(--color-primary)] border-b pb-2 mb-4">Certifications</h2>
                    <ul class="list-disc list-inside text-[var(--color-text-secondary)] space-y-2">
                        <li><strong>Oracle Certified Professional: Java SE 11 Developer</strong> (2021)</li>
                    </ul>
                </div>
            </aside>

            <!-- Main Column: Experience & Education -->
            <section class="md:col-span-2 space-y-8">
                <!-- Experience -->
                <div class="bg-[var(--color-surface)] shadow rounded-lg p-6">
                    <h2 class="text-2xl font-bold text-[var(--color-primary)] mb-6">Experience</h2>

                    <!-- Experience: BairesDev -->
                    <div class="mb-8">
                        <h3 class="text-xl font-semibold text-[var(--color-secondary)]">BairesDev LLC (Remote) | Software Engineer</h3>
                        <p class="text-sm text-[var(--color-text-secondary)] mb-2">Jun 2022 – Present</p>
                        <ul class="list-disc list-inside text-[var(--color-text-secondary)] space-y-2">
                            <li>
                                <strong>.NET 8 & AWS Integrations:</strong>
                                <ul class="list-disc list-inside ml-6 space-y-1">
                                    <li>
                                        Built AWS Lambda functions (C#/.NET 8) to synchronize 100k+ SKUs between LulaRoe and Shopify, handling throttling via data‑diffing logic and retry strategies.
                                    </li>
                                    <li>Implemented CloudWatch logging and custom error handling to boost reliability and simplify maintenance.</li>
                                    <li>Streamlined CI/CD pipelines using Azure DevOps and GitLab CI.</li>
                                </ul>
                            </li>
                            <li>
                                <strong>High‑Performance Image Processing:</strong>
                                <ul class="list-disc list-inside ml-6 space-y-1">
                                    <li>
                                        Developed an AWS Lambda microservice (C#/.NET 8, SkiaSharp) for dynamic image collages with sub‑second response times.
                                    </li>
                                    <li>Provided multiple layouts (1–4 images) to enhance the user experience on the Wayroo platform.</li>
                                </ul>
                            </li>
                            <li>
                                <strong>Spring Boot Modernization:</strong>
                                <ul class="list-disc list-inside ml-6 space-y-1">
                                    <li>
                                        Refactored legacy Java APIs into modern Spring Boot services, reducing technical debt and standardizing data access with Spring Data JPA and Hibernate.
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>

                    <!-- Experience: Geoi2 Tecnologia -->
                    <div class="mb-8">
                        <h3 class="text-xl font-semibold text-[var(--color-secondary)]">Geoi2 Tecnologia (Remote) | Full Stack Developer</h3>
                        <p class="text-sm text-[var(--color-text-secondary)] mb-2">Aug 2019 – Jun 2022</p>
                        <ul class="list-disc list-inside text-[var(--color-text-secondary)] space-y-2">
                            <li>
                                <strong>Legacy Overhaul & Performance:</strong>
                                <ul class="list-disc list-inside ml-6 space-y-1">
                                    <li>
                                        Revamped the JSF‑based ‘eContas’ into an Angular 13 micro‑frontend paired with a Spring Boot backend for enhanced speed and usability.
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <strong>Database & ETL Automation:</strong>
                                <ul class="list-disc list-inside ml-6 space-y-1">
                                    <li>
                                        Developed a Java CLI to automate database setups and Pentaho Kettle ETL processes across multiple DBMS (SQL Server, MySQL, PostgreSQL, Oracle).
                                    </li>
                                    <li>
                                        Implemented gzip compression for JSON payloads, reducing data volume by ~90% for low‑bandwidth regions.
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>

                    <!-- Experience: Fonte Tecnologia -->
                    <div class="mb-8">
                        <h3 class="text-xl font-semibold text-[var(--color-secondary)]">Fonte Tecnologia (On‑site) | Full Stack Developer</h3>
                        <p class="text-sm text-[var(--color-text-secondary)] mb-2">Aug 2017 – Aug 2019</p>
                        <ul class="list-disc list-inside text-[var(--color-text-secondary)]">
                            <li>
                                Developed web applications using C# .NET WebAPI, Knockout.js, and SignalR for real‑time features.
                            </li>
                        </ul>
                    </div>

                    <!-- Experience: PSG Tecnologia -->
                    <div>
                        <h3 class="text-xl font-semibold text-[var(--color-secondary)]">PSG Tecnologia (On‑site) | Full Stack Developer</h3>
                        <p class="text-sm text-[var(--color-text-secondary)] mb-2">Mar 2013 – Aug 2017</p>
                        <ul class="list-disc list-inside text-[var(--color-text-secondary)]">
                            <li>
                                Built end‑to‑end solutions using C#, JavaScript, and T‑SQL with MVC, WebAPI, and Entity Framework.
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Education -->
                <div class="bg-[var(--color-surface)] shadow rounded-lg p-6">
                    <h2 class="text-2xl font-bold text-[var(--color-primary)] mb-6">Education</h2>
                    <div class="text-[var(--color-text-secondary)]">
                        <p class="mb-1"><strong>B.S. in Computer Engineering</strong></p>
                        <p class="text-sm">Anhanguera Uniderp (2009–2013)</p>
                    </div>
                </div>
            </section>
        </div>
    </main>
</BaseLayout>
