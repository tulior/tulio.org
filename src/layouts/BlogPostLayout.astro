---
import BaseLayout from './BaseLayout.astro';
import Navbar from '../components/Navbar.svelte';

const {frontmatter} = Astro.props;
---
<BaseLayout title={frontmatter.title} description={frontmatter.description}>
    <Navbar client:load/>

    <main class="pt-24 max-w-6xl mx-auto px-6 py-16 space-y-20">
        <article class="max-w-3xl mx-auto">
            <div class="prose 
                      prose-lg 
                      prose-headings:text-[var(--color-primary)]
                      prose-a:text-[var(--color-primary)]
                      prose-strong:text-[var(--color-text-primary)]
                      prose-em:text-[var(--color-text-primary)]
                      hover:prose-a:text-[var(--color-primary-hover)]
                      dark:prose-invert">
                <h1>{frontmatter.title}</h1>
                <time class="text-sm text-[var(--color-text-secondary)] block mb-8">
                  {new Date(frontmatter.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
                <slot/>
            </div>
        </article>
    </main>
</BaseLayout>