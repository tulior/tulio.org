---
/* Navbar.astro */
---
<header class="fixed top-0 left-0 w-full z-50 bg-white/80 backdrop-blur-lg shadow-sm">
  <nav class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
    <!-- Branding / Logo -->
    <a
      href="/"
      class="text-2xl font-bold text-primary transition-colors hover:text-secondary"
    >
      tulio_anjos
    </a>
    <!-- Navigation Links -->
    <ul class="flex items-center space-x-6">
      <li>
        <a
          href="/resume"
          class="text-lg font-medium text-text-primary hover:text-primary transition-colors"
        >
          Resume
        </a>
      </li>
      <li>
        <a
          href="/blog"
          class="text-lg font-medium text-text-primary hover:text-primary transition-colors"
        >
          Blog
        </a>
      </li>
      <li>
        <a
          href="mailto:mail@tulio.org"
          class="px-4 py-2 border border-primary rounded-full text-primary font-mono hover:bg-primary hover:text-white transition-colors"
        >
          Contact
        </a>
      </li>
    </ul>
  </nav>
</header>

