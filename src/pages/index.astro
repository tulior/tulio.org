                        <li class="flex justify-between items-center">
                            <span>Rust</span>
                            <span class="font-mono text-xs bg-[var(--color-accent)]/10 px-2 py-1 rounded text-[var(--color-accent)]">active learning</span>
                        </li>
                    </ul>
                </div>
                <!-- Cloud Infrastructure -->
                <div class="bg-[var(--color-surface)] shadow-md rounded-lg p-6">
                    <div class="flex items-center gap-3 mb-4">
                        <span class="font-mono text-lg text-[var(--color-primary)]">[devops]</span>
                        <h3 class="text-xl font-semibold">Cloud Infrastructure</h3>
                    </div>
                    <div class="grid grid-cols-2 gap-3">
